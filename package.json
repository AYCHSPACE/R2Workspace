{
  "private": true,
  "name": "readium-ng-workspace",
  "version": "0.0.0",
  "devDependencies": {
    "concurrently": "^3.6.0",
    "npm-run-all": "^4.1.2"
  },
  "scripts": {
    "preinstall": "npm run clone:readium-cfi-js && npm run clone:readium-shared-js && npm run clone:r2-utils-js && npm run clone:r2-lcp-js && npm run clone:r2-shared-js && npm run clone:readium-ng && npm run clone:readium-ng-viewer",
    "build": "npm-run-all --serial build:**",
    "watch": "concurrently \"npm:watch:*\" \"npm:watch-app:*\"",
    "start": "concurrently \"npm:watch:*\" \"npm:start-app:*\"",
    "watch:readium-cfi-js": "cd readium-cfi-js && npm run watch",
    "watch:readium-shared-js": "cd readium-shared-js && sleep 10s && npm run watch",
    "watch:readium-ng": "cd readium-ng && sleep 20s && npm run watch",
    "watch-app:readium-ng-viewer": "cd readium-ng-viewer && sleep 30s && npm run watch",
    "start-app:readium-ng-viewer": "cd readium-ng-viewer && sleep 30s && npm run start",
    "build:readium-cfi-js": "cd readium-cfi-js && npm run build",
    "build:readium-shared-js": "cd readium-shared-js && npm run build",
    "build:r2-utils-js": "cd r2-utils-js && npm run build:es5",
    "build:r2-lcp-js": "cd r2-lcp-js && npm run build:es5",
    "build:r2-shared-js": "cd r2-shared-js && npm run build:es5",
    "build:readium-ng": "cd readium-ng && npm run build",
    "build:readium-ng-viewer": "cd readium-ng-viewer && npm run build",
    "clone:readium-cfi-js": "[ ! -d readium-cfi-js ] && git clone -b develop git@github.com:readium/readium-cfi-js.git || :",
    "clone:readium-shared-js": "[ ! -d readium-shared-js ] && git clone -b feature/readium-ng git@github.com:evidentpoint/readium-shared-js.git || :",
    "clone:r2-utils-js": "[ ! -d r2-utils-js ] && git clone git@github.com:evidentpoint/r2-utils-js.git || :",
    "clone:r2-lcp-js": "[ ! -d r2-lcp-js ] && git clone git@github.com:evidentpoint/r2-lcp-js.git || :",
    "clone:r2-shared-js": "[ ! -d r2-shared-js ] && git clone git@github.com:evidentpoint/r2-shared-js.git || :",
    "clone:readium-ng": "[ ! -d readium-ng ] && git clone git@github.com:evidentpoint/readium-ng.git || :",
    "clone:readium-ng-viewer": "[ ! -d readium-ng-viewer ] && git clone git@github.com:evidentpoint/readium-ng-viewer.git || :",
    "clean:npm": "rm -rf ./**/node_modules && rm -rf ./**/yarn.lock"
  },
  "workspaces": {
    "packages": [
      "readium-cfi-js",
      "readium-shared-js",
      "r2-utils-js",
      "r2-lcp-js",
      "r2-shared-js",
      "readium-ng",
      "readium-ng-viewer"
    ],
    "nohoist": [
      "**/r2-opds-js",
      "**/r2-opds-js/**",
      "**/r2-lcp-js",
      "**/r2-lcp-js/**",
      "**/r2-utils-js",
      "**/r2-utils-js/**",
      "**/ta-json",
      "**/ta-json/**"
    ]
  }
}
